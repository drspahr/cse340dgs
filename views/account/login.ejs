<!-- Login View -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>

<!-- Login Form -->
<div id="form-area">
    <form class="form">
        <label for="email-address">Email: </label><br>
        <input type="email" id="email-address" name="account_email" required><br>
        <label for="password">Password: </label><br>
        <input type="password" id="password" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
        <div>
            <p class="prequire">The password must contain:<br>12 characters<br>
                at least 1 capital letter<br>
                at least 1 number<br>
                at least 1 special character</p>
        </div>
        <button type="submit">LOGIN</button><br>
        <label>No account: <a href="/account/registration">Sign-up</a></label>
    </form>
</div>