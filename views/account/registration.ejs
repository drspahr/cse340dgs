<!-- Registration View -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- Registration View -->
<div id="reg-area">
    <p class="formtitle">All Fields Are Required</p><br>
    <form class="form" action="/account/registration" method="post">
        <label for="fname">First Name</label><br>
        <input type="text" id="fname" name="account_firstname" required><br><br>
        <label for="lname">Last Name</label><br>
        <input type="text" id="lname" name="account_lastname" required><br><br>
        <label for="email">Email Address</label><br>
        <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address"><br><br>
        <label for="password">Password</label><br>
        <input type="password" id="password" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
        <div>
            <p class="prequire">The password must contain:<br>12 characters<br>
                at least 1 capital letter<br>
                at least 1 number<br>
                at least 1 special character</p>
        </div>
        <button type="submit">Register</button>
    </form>
</div>