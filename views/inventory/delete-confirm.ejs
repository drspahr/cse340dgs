<!-- Edit Inventory -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- Message Block -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- Form to edit inventory -->
<div id="inventory">
    <p class="tform">All Fields Are Required</p>
    <form id="deleteForm" class="form" action="/inv/delete" method="post">
        <label for="iyear">Year</label><br>
        <input type="number" id="iyear" name="inv_year" required value="<%= locals.inv_year %>" readonly><br><br>
        <label for="imake">Make</label><br>
        <input type="text" id="imake" name="inv_make" required value="<%= locals.inv_make %>" readonly><br><br>
        <label for="imodel">Model</label><br>
        <input type="text" id="imodel" name="inv_model" required value="<%= locals.inv_model %>" readonly><br><br>
        <label for="iprice">Price</label><br>
        <input type="number" id="iprice" name="inv_price" required value="<%= locals.inv_price %>" readonly><br><br>
        <p>Are you sure you want to delete this vehicle? This cannot be undone!</p>
        <button type="submit">Delete Vehicle</button>
        <input type="hidden" name="inv_id" <% if (locals.inv_id) {%> value="<%= locals.inv_id %>" <% } %>>
    </form>
</div>